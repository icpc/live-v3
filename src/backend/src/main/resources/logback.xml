<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>icpclive.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FLOW" class="org.icpclive.util.FlowLogger">
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FLOW"/>
        <appender-ref ref="FILE"/>
    </root>
    <logger name="org.eclipse.jetty" level=""/>
    <logger name="io.netty" level=""/>
    <logger name="org.icpclive.service.QueueService" level=""/>
    <logger name="org.icpclive.cds.adapters.EmulationAdapter" level=""/>
</configuration>
